<h1>Eat-Da-Burger!</h1>

<h2>Waiting to Be Eaten...</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burger/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers We Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burger/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eat">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Yum!<br>
    <input type="radio" name="eaten" value="0"> Waiting to be Eaten...
  </div>

  <button type="submit">Add Burger</button>
</form>
